<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#243743"
    tools:context=".Questions">

    <TextView
        android:id="@+id/def_View"
        android:layout_width="356dp"
        android:layout_height="153dp"
        android:layout_marginBottom="416dp"
        android:background="#278A949B"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="ASASDFASDFASDFASDFASDFASDFASDFASDFASDFASDF"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/page_Num"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="#008A949B"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="page #"
        android:textColor="#fffff0"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_ans1"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginBottom="228dp"
        android:backgroundTint="#28B78D"
        android:onClick="choice1"
        android:text="ans1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_ans2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_ans4"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#28B78D"
        android:onClick="choice4"
        android:text="ans4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_ans3" />

    <Button
        android:id="@+id/bt_ans3"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="#28B78D"
        android:onClick="choice3"
        android:text="ans3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_ans4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_ans2"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginBottom="228dp"
        android:backgroundTint="#28B78D"
        android:onClick="choice2"
        android:text="ans2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_ans1" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#0CAABF"
        android:onClick="submit"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf=""
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>